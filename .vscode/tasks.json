{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Windows MinGW g++ debug build active file",
            "command": "${env:LOCALAPPDATA}\\mingw64\\bin\\g++.exe",
            "args": [
                "-std=gnu++20",
                "-I${workspaceFolder}\\ac-library",
                "-Wall",
                "-Wextra",
                "-g3",
                "-O0",
                "${file}",
                "-o",
                "debug.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Linux g++ debug build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++20",
                "-I${workspaceRoot}/ac-library",
                "-Wall",
                "-Wextra",
                "-g3",
                "-O0",
                "${file}",
                "-o",
                "debug.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "shell",
            "label": "Shell: Remove executable file",
            "command": "rm",
            "args": [
                "-f",
                "debug.out",
                "debug.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ],
    "version": "2.0.0"
}