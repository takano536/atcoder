{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Linux g++ debug build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++23",
                "-I$HOME/.local/include",
                "-Wall",
                "-Wextra",
                "-g3",
                "-O0",
                "${file}",
                "-o",
                "debug.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Windows MinGW g++ debug build active file",
            "command": "%SCOOP%\\apps\\mingw\\current\\bin\\g++.exe",
            "args": [
                "-std=gnu++23",
                "-I%USERPROFILE%\\.local\\include",
                "-Wall",
                "-Wextra",
                "-g3",
                "-O0",
                "${file}",
                "-o",
                "debug.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ],
    "version": "2.0.0"
}